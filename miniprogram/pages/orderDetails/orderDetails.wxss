/* pages/orderDetails/orderDetails.wxss */
.title {
  text-align: center;
  color: rgb(97, 94, 94);
  margin: 20rpx;
  font-size: 34rpx;
  
}
.topBar {
  height: 150rpx;
  width: 670rpx;
  padding-left: 40rpx;
  line-height: 150rpx;
  margin: 20rpx auto 0 auto;
  background-image: linear-gradient(to right,#eece1c,#f5dc93);
  color: #fff;
  font-size: 42rpx;
  font-weight: 600;
  border-radius: 25rpx;
}
.consignee, .msg, .order {
  width: 660rpx;
  margin: 50rpx auto 100rpx auto;
}
.itemTitle {
  font-size: 38rpx;
  font-weight: 600;
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  border-bottom: 2rpx solid #D9D9D9;
  margin-bottom: 40rpx;
}
.itemName {
  float: left;
  margin: 10rpx;
  width: 150rpx;
  height: 60rpx;
  color:rgb(97, 94, 94);
}
.itemContent {
  height: 80rpx;
  line-height: 65rpx;
}
.msg {
  height: 300rpx;
}
.cover {
  width: 180rpx;
  height: 180rpx;
  overflow: hidden;
  float: left;
  margin-left: 20rpx;
  border-radius: 6rpx;
}
.cover image{
  width: 180rpx;
}
.msgTitle {
  float: left;
  width: 400rpx;
  height: 84rpx;
  float: left;
  font-size: 32rpx;
  margin: -160rpx 0 0 250rpx;
  word-break: break-all;
  white-space: normal;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  text-overflow: ellipsis;
  overflow: hidden;
}
.currentLocation {
  float: left;
  font-size: 28rpx;
  color: rgb(97, 94, 94);
  margin: -60rpx 0 0 125px; 
}
.button {
  width: 710rpx;
  padding-right: 40rpx;
  margin-top: -80rpx;
}
.button view {
  font-size: 32rpx;
  width: 200rpx;
  height: 80rpx;
  float: right;
  margin: 30rpx 15rpx;
  line-height: 80rpx;
  text-align: center;
  border-radius: 50rpx;
  color: #fff;
  background: #ECBC28;
}

