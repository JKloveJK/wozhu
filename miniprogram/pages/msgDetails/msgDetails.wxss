/* pages/msgDetails/msgDetails.wxss */
.pageTitle {
  text-align: center;
  color: rgb(97, 94, 94);
  margin: 20rpx;
  font-size: 34rpx;
}
swiper {
  width: 100%;
  height: 700rpx;
}
swiper image {
  width: 100%;
  height: 700rpx;
}
.msgTitle {
  width: 92%;
  margin: 30rpx auto;
  font-size: 38rpx;
  font-weight: 600;
}
.msgContent {
  width: 92%;
  margin: 10rpx auto;
  line-height: 54rpx;
}
.userInfo {
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.userProfile {
  width: 100rpx;
  border-radius: 100%;
}
.userName {
  font-size: 30rpx;
  font-weight: 550;
  position: absolute;
  top: 40rpx;
  left: 120rpx;
}
.classify, .way {
  width: 92%;
  margin:30rpx auto;
}
.itemName {
  float: left;
  color: rgb(97, 94, 94);
  width: 200rpx;
}
.perch {
  height: 150rpx;
}
.button {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 80%;
  margin: 50rpx auto;
  display: flex;
  border-radius: 50rpx;
  box-shadow: 0 0 30rpx 1.6rpx rgba(0, 0, 0, 0.2);
  z-index: 999;
}
.button view {
  flex: 1;
  font-size: 36rpx;
  text-align: center;
}
.addToWishes {
  height: 68rpx;
  line-height: 68rpx;
  color: #ECBC28;
  background: #fff;
  border: 6rpx solid #ECBC28;
  border-top-left-radius: 50rpx;
  border-bottom-left-radius: 50rpx;
}
.adopt {
  height: 80rpx;
  line-height: 80rpx;
  color: #fff;
  background: #ECBC28;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
}