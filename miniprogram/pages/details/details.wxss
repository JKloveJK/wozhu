/* pages/details/details.wxss */
.pageTitle {
  text-align: center;
  color: rgb(97, 94, 94);
  margin: 20rpx;
  font-size: 34rpx;
}
swiper {
  width: 100%;
  height: 700rpx;
}
swiper image {
  width: 100%;
  height: 700rpx;
}
.msgTitle {
  width: 92%;
  margin: 30rpx auto;
  font-size: 38rpx;
  font-weight: 600;
}
.msgContent {
  width: 92%;
  margin: 10rpx auto;
  line-height: 54rpx;
}
.userInfo {
  width: 90%;
  margin: 0 auto;
  position: relative;
}
.userProfile {
  width: 100rpx;
  border-radius: 100%;
}
.userName {
  font-size: 30rpx;
  font-weight: 550;
  position: absolute;
  top: 0;
  left: 120rpx;
}
.area {
  position: absolute;
  top: 50rpx;
  left: 120rpx;
  height: 50rpx;
  width: 80%;
}
.areaLogo {
  float: left;
  width: 50rpx;
  line-height: 50rpx;
}
.area view {
  font-size: 28rpx;
  line-height: 50rpx;
  margin-left: 30rpx;
  color: rgb(97, 94, 94);
}
.classify, .way {
  width: 92%;
  margin:30rpx auto;
}
.itemName {
  float: left;
  color: rgb(97, 94, 94);
  width: 200rpx;
}
