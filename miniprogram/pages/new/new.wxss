/* pages/new/new.wxss */
.perch {
  height: 100px;
  width: 100%;
}
.title {
  width: 100%;
  height: 100rpx;
  text-align: center;
  line-height: 100rpx;
  color: rgb(97, 94, 94);
  background: #fff;
  font-size: 34rpx;
  position: fixed;
  z-index: 999;
  border-bottom: 2rpx solid rgba(97, 94, 94, 0.137);
}
.form {
  margin-top: 120rpx;
}
input {
  height: 62rpx;
  width: 85%;
  margin: 10px auto;
  padding: 0 30rpx;
  background: rgba(0, 0, 0, 0.048);
  border-radius: 100px;
  font-size: 32rpx;
}
textarea {
  height: 300px;
  width: 85%;
  margin: 10px auto;
  padding: 10px 30rpx;
  background: rgba(0, 0, 0, 0.048);
  border-radius: 15px;
  font-size: 32rpx;
}
radio-group {
  width: 90%;
  margin: 20px auto;
  font-size: 30rpx;
}
radio-group text {
  display: inline-block;
  margin-right: 40rpx;
  color: rgb(97, 94, 94);
}
radio {
  margin-right: 20rpx;
}
radio .wx-radio-input {
  width: 36rpx;
  height: 36rpx;
}
.imgList {
  width: 675rpx;
  margin: 15px auto;
  display: flex;
  flex-wrap: wrap;
}
.imgItem {
  width: 202.5rpx;
  height: 202.5rpx;
  overflow: hidden;
  margin: 20px 1.5%;
  position: relative;
}
.imgItem image {
  width: 100%;
}
.imgNew {
  border: 1px dashed rgba(0, 0, 0, 0.575);
}
button {
  font-size: 32rpx!important;
  border-radius: 20rpx!important;
  background: #f6f6f6;
}