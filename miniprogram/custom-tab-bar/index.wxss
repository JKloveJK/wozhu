.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 140rpx;
  background: #fff;
  display: flex;
  padding-bottom: env(safe-area-inset-bottom);
  box-shadow:0 0 30rpx 1.6rpx rgba(0, 0, 0, 0.5);
  border-top-left-radius:80rpx;
  border-top-right-radius:80rpx;
}

.tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.tab-bar-item cover-image {
  width: 70rpx;
  height: 70rpx;
}

.tab-bar-item cover-view {
  font-size: 24rpx;
}
